 & {\scriptscriptstyle +\sum_{n\neq m}V_{nm}\left(t\right)|n\rangle\negmedspace\langle m|\left(\prod_{u\mathbf{k}}{\rm exp}\left(\frac{\left(v_{mu\mathbf{k}}^{*}v_{nu\mathbf{k}}-v_{mu\mathbf{k}}v_{nu\mathbf{k}}^{*}\right)}{2\omega_{u\mathbf{k}}^{2}}\right)\right)\prod_{u}{\rm exp}\left(-\frac{1}{2}\sum_{\mathbf{k}}\frac{\left|v_{mu\mathbf{k}}-v_{nu\mathbf{k}}\right|^{2}}{\omega_{u\mathbf{k}}^{2}}\coth\left(\frac{\beta_{u}\omega_{u\mathbf{k}}}{2}\right)\right)}\\
{\scriptscriptstyle v_{mu\mathbf{k}}^{*}v_{nu\mathbf{k}}-v_{mu\mathbf{k}}v_{nu\mathbf{k}}^{*}} & {\scriptscriptstyle =\left(v_{mu\mathbf{k}}^{\Re}-{\rm i}v_{mu\mathbf{k}}^{\Im}\right)\left(v_{nu\mathbf{k}}^{\Re}+{\rm i}v_{nu\mathbf{k}}^{\Im}\right)-\left(v_{mu\mathbf{k}}^{\Re}+{\rm i}v_{mu\mathbf{k}}^{\Im}\right)\left(v_{nu\mathbf{k}}^{\Re}-{\rm i}v_{nu\mathbf{k}}^{\Im}\right)}\\
 & {\scriptscriptstyle =\left(v_{mu\mathbf{k}}^{\Re}v_{nu\mathbf{k}}^{\Re}+{\rm i}v_{nu\mathbf{k}}^{\Im}v_{mu\mathbf{k}}^{\Re}-{\rm i}v_{mu\mathbf{k}}^{\Im}v_{nu\mathbf{k}}^{\Re}+v_{mu\mathbf{k}}^{\Im}v_{nu\mathbf{k}}^{\Im}\right)}\\
