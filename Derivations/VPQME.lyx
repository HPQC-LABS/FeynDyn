 & =-\int_{0}^{t}{\rm {\rm {\rm \text{Tr}}}}_{B}\left(\sum_{j\in J}\,\sum_{n=1}C_{jn}\left(t\right)\left(\widetilde{A_{jn}}\left(t\right)\otimes\widetilde{B_{jn}}\left(t\right)\right)\sum_{j'\in J}\,\sum_{n'=1}C_{j'n'}\left(s\right)\left(\widetilde{A_{j'n'}}\left(s\right)\otimes\widetilde{B_{j'n'}}\left(s\right)\right)\widetilde{\overline{\rho_{S}}}\left(t\right)\rho_{B}\right.\\
 & -\sum_{j\in J}\,\sum_{n=1}C_{jn}\left(t\right)\left(\widetilde{A_{jn}}\left(t\right)\otimes\widetilde{B_{jn}}\left(t\right)\right)\widetilde{\overline{\rho_{S}}}\left(t\right)\rho_{B}\sum_{j'\in J}\,\sum_{n'=1}C_{j'n'}\left(s\right)\left(\widetilde{A_{j'n'}}\left(s\right)\otimes\widetilde{B_{j'n'}}\left(s\right)\right)\\
 & -\sum_{j'\in J}\,\sum_{n'=1}C_{j'n'}\left(s\right)\left(\widetilde{A_{j'n'}}\left(s\right)\otimes\widetilde{B_{j'n'}}\left(s\right)\right)\widetilde{\overline{\rho_{S}}}\left(t\right)\rho_{B}\sum_{j\in J}\,\sum_{n=1}C_{jn}\left(t\right)\left(\widetilde{A_{jn}}\left(t\right)\otimes\widetilde{B_{jn}}\left(t\right)\right)\\
